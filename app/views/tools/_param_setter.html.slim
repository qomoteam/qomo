- case param['type']
  - when 'input'
    input.value.input.text.long-field type='text' name=param['name'] value=param['value']

  - when 'output'
    input.value.output.text.long-field type='text' name=param['name'] value=param['value']

  - when 'string'
    input.value.text.long-field type='text' name=param['name'] value=param['value']

  - when 'path'
    input.value.text.long-field type='text' name=param['name'] value=param['value']

  - when 'bool'
    input.value type='checkbox' name=param['name'] checked=param['value']

  - when 'select'
    select.value.select.long-field name=param['name'] multiple=param['multiple']
      = options_for_select param['options'].map {|e| [e['label'], e['value']]}, (param['options'].select {|e| e['selected']}).map {|e| e['value']}