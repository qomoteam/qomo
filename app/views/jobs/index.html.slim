.page-panel
  h1 Jobs History

  table.aui
    thead
      tr
        th Job ID
        th Status
        th Created At
        th Updated At
        th

    tbody
      - for job in @jobs
        tr
          td
            a href=job_path(job) = job.id
          td = job.status
          td = ptime job.created_at, current_user.timezone
          td = ptime job.updated_at, current_user.timezone
          td
            a href=job_path(job) data-method='DELETE' Delete
